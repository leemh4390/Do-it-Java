package chapter03;
/*
 *  날짜 : 2023/03/21
 *  이름 : 이민혁
 * 	내용 : do it 자바 완전정복 연산자 실습하기
 * 
 */
public class ConditionalOperator {
	public static void main(String[] args) {
		
		// 삼항 연산자
		int value1 = (3>5) ? 6 : 9; // value1 = 9
		System.out.println(value1);
		
		
		int value2 = (5 > 3) ? 10 : 20;
		System.out.println(value2);
		
		int value3 = 3;
		System.out.println((value3 % 2 == 0) ? "짝수" : "홀수");
		
		
		// cf if-else 구문
		if(value3 % 2 == 0) {
			System.out.println("짝수");
		}else {
			System.out.println("홀수");
		}
		
		
		System.out.println("연습문제 1 : " + (2 + 3 / 2)); // 예상 답 : 2
		System.out.println("연습문제 2 : " + (10 % 3 + 5 / 3 )); // 2
		System.out.println("연습문제 3 : " + (4 + 5 / 2) % 4); // 0
	}
}
